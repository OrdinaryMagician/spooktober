	States
	{
	Spawn:
		NLRD M -1;
		Stop;
	Idle:
		NLRD MMMMMNNNNNN 2 A_Look();
		Loop;
	See:
		NLRD M 0
		{
			scnt = 0;
			PainChance = GetDefaultByType(GetClass()).PainChance;
		}
		NLRD MMNNOOPP 3
		{
			scnt++;
			if ( !(scnt%4) )
				A_PlaySound("nightmarelord/step",CHAN_5);
			A_Chase();
			A_DecideStrafe();
			if ( !Random[NLord](0,16) ) A_DecideMelee();
		}
		NLRD P 0 A_DecideChase();
		Loop;
	Pain:
		NLRD Q 0
		{
			if ( bGrabbing )
			{
				bGrabbing = false;
				vel -= (cos(angle),sin(angle))*12;
			}
			PainChance = GetDefaultByType(GetClass()).PainChance;
		}
		NLRD Q 3 A_Pain();
		NLRD QQ 3 A_TryEvasion();
		Goto See;
	Missile:
		NLRD # 3 A_DecideRanged();
		Goto See;
	HomingBolt:
		NLRD W 5 A_FaceTarget();
		NLRD R 5
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/zap");
		}
		NLRD W 4 A_FaceTarget(30);
		NLRD V 4
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/zap");
		}
		NLRD W 3 A_FaceTarget(30);
		NLRD V 3
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/zap");
		}
		NLRD W 2 A_FaceTarget(30);
		NLRD S 4
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/cast");
		}
		NLRD T 12 A_BigBolt();
		NLRD S 4;
		NLRD W 5;
		NLRD M 5;
		Goto See;
	DualBolts:
		NLRD W 4 A_FaceTarget();
		NLRD R 4
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/zap");
		}
		NLRD W 3 A_FaceTarget(30);
		NLRD V 3
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/zap");
		}
		NLRD W 2 A_FaceTarget(30);
		NLRD S 4
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/cast");
		}
		NLRD T 12 A_DualBolts();
		NLRD S 4;
		NLRD W 5;
		NLRD M 5;
		Goto See;
	BoltBarrage:
		NLRD W 3 A_FaceTarget(30);
		NLRD V 3
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/zap");
		}
		NLRD W 2 A_FaceTarget(30);
		NLRD S 4
		{
			A_FaceTarget(30);
			A_PlaySound("nightmarelord/cast");
		}
		NLRD T 0 { scnt = Random[NLord](10,20); }
	BoltBarrage2:
		NLRD T 4
		{
			A_FaceTarget(10);
			A_Barrage();
			scnt--;
			return A_JumpIf(scnt<=0,1);
		}
		Goto BoltBarrage2;
		NLRD S 4;
		NLRD W 5;
		NLRD M 5;
		Goto See;
	RainOfSparks:
		NLRD G 9
		{
			if ( !(self is 'mkNightmareLordDecoy') )
				A_PlaySound(SeeSound,CHAN_VOICE,1.0,false,ATTN_NONE);
		}
		NLRD G 0
		{
			bSHOOTABLE = false;
			A_PlaySound("nightmarelord/disappear",CHAN_6,1.0,false,0.3);
		}
		NLRD HIJKL 3;
		TNT1 A 30
		{
			bSOLID = false;
			scnt = Random[NLord](90,120);
		}
	RainLoop:
		TNT1 A 4
		{
			A_RainOfSparks();
			scnt--;
			return A_JumpIf(scnt<=0,1);
		}
		Goto RainLoop;
		TNT1 A 90;
		NLRD L 0
		{
			raintic = level.totaltime;
			bSOLID = true;
			tracer = FindFarthestTeleSpot();
			score = 0;
			TeleportMove(tracer.pos,true);
			angle = tracer.angle;
		}
		Goto TeleIn;
	Melee:
		NLRD # 3 A_DecideMelee();
		Goto See;
	DoRadiusBlast:
		NLRD M 4
		{
			if ( !(self is 'mkNightmareLordDecoy') )
				A_PlaySound("nightmarelord/pain3");
		}
		NLRD M 2 { vel.z = 16; }
		NLRD M 1 A_JumpIf(CheckFeet(),1);
		Goto DoRadiusBlast+2;
		NLRD M 25 A_SpawnBlast();
