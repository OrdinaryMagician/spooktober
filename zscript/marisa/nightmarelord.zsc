			level.ExecuteSpecial(80,target,null,false,14);
		}
		TNT1 A 5 A_Splode();
		Wait;
	TeleOut:
		NLRD G 9;
		NLRD G 0
		{
			bSHOOTABLE = false;
			A_PlaySound("nightmarelord/disappear",CHAN_6,1.0,false,0.3);
		}
		NLRD HIJKL 3;
		TNT1 A 70 { bSOLID = false; }
